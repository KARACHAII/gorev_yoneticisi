@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/writer/assets/css/style.css">
<div class="container-scroller">
    <div class="card">
        <div class="card-body">
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputUsername1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" name="UserName" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="UserPassword" placeholder="Şifre">
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Giriş Yap</button>
                <button class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Register">Kayıt ol</button>
                
                

            </form>
        </div>
    </div>
</div>






