@using EntityLayer.Concrete
@model List<Plan>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

 <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        @{
                            if (ViewBag.planListCount == 0)
                            {
                                <h4 class="card-title">Bugün için mevcut plan bulunmamaktadır</h4>
                                <td> <a href="/User/AddDailySchedule/" class="btn btn-outline-warning btn-fw">Plan ekle</a> </td>
                            }
                            else
                            {
                                <h4 class="card-title">Günün Planları</h4>
                                <p class="card-description"> </p>
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th> #Plan Id </th>
                                        <th> Başlık </th>
                                        <th> Detay </th>
                                    </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tbody>
                                        <tr class="table-success">
                                            <td> @item.PlanID </td>
                                            <td> @item.PlanTitle </td>
                                            <td> @item.PlanContent </td>
                                        </tr>
                                        </tbody>
                                    }
                                    <td> <a href="/User/AddDailySchedule/" class="btn btn-outline-warning btn-fw">Plan ekle</a> </td>
                                </table>
                            }
                        }
                 
                    </div>
                </div>
              </div>
